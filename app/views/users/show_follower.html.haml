.wrapper
  = render "posts/top_info"
  .Body
    .Body__items 
      %main
        .User
          = link_to user_path(@user.id) do
            - if @user.icon?
              = image_tag @user.icon.url, class:"User__icon"
            -else
              = icon('fas', 'circle', class: "User__icon")
          .User__info
            .User__info__top
              .User__info__top__name
                .User__info__top__name__nickname
                  = link_to user_path(@user.id) do
                    = @user.nickname
                .User__info__top__name__id
                  = link_to user_path(@user.id) do
                    = @user.name
              .User__info__top__box
                %span{ class:"User__info__top__box__evaluate", rate:"#{@evaluate}"}
                .User__info__top__box__count
                  - if @evaluate == "none"
                    評価はまだありません。
                  - else
                    = @evaluate 
                    = "(#{@likes_count + @comgoods_count})"
              .User__info__top__follow
                = render "relationships/follow_button", user: @user
            .User__info__middle
              .User__info__middle__value
                = link_to user_path(@user.id) do
                  記事#{@posts.count}件
              .User__info__middle__value
                = link_to "フォロー#{@user.followings.count}人", "show_following", user: @user
              .User__info__middle__value
                = link_to "フォロワー#{@user.followers.count}人", "show_follower", user: @user
            .User__info__profile
              = @user.profile
        .field
          .Users-list
            %h1
              フォロワー
            %article.User-box
              - @user.followers.each do |user|
                %header.User-box__header
                  .User-box__header__top
                    = link_to user_path(user.id) do
                      - if user.icon?
                        = image_tag user.icon.url, class:"User-box__header__top__icon"
                      - else
                        = icon('fas', 'circle', class: "User-box__header__top__icon")
                    .User-box__header__top__user
                      .User-box__header__top__user__nickname
                        = link_to user_path(user.id) do
                          = user.nickname
                      .User-box__header__top__user__id
                        = link_to user_path(user.id) do
                          = user.name
                    .User__info__top__follow
                      = render "relationships/follow_button", user: user

          = render "side_bar"
