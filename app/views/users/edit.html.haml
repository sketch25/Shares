.wrapper
  = render "posts/top_info"
  .Body
    .AccountPage
      .AccountPage__title
        .AccountPage__title__content
          %h2 アカウントの編集
        = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'Button'
      .AccountPage__form
        = form_for(current_user) do |f|
          .FormField
            .FormField__label--normal
              - if current_user.icon?
                = image_tag current_user.icon.url, class:"FormField__label--normal__icon"
              -else
                = icon('fas', 'circle', class: "FormField__label--normal__icon")
            .FormField__input--normal
              = f.label :icon,"アイコンを選択", class: "icon_input_btn"
              = f.file_field :icon, class: "icon_form"
          .FormField
            .FormField__label--normal
              = f.label :name
              %i (英数字16文字以内)
            .FormField__input--normal
              = f.text_field :name, autofocus: true
          .FormField
            .FormField__label--normal
              = f.label :nickname
              %i (8文字以内)
            .FormField__input--normal
              = f.text_field :nickname
          .FormField
            .FormField__label--normal
              = f.label :email
            .FormField__input--normal
              = f.email_field :email
          .FormField
            .FormField__label--normal
              = f.label :profile
              %i (500文字以内)
            .FormField__input--normal
              = f.text_area :profile
          = f.submit "Update", class: 'Button UserButton'