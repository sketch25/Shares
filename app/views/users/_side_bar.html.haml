%nav.Side-items
  %ul.posts
    投稿一覧
    - @user.posts.reverse[0..4].each do |post|
      %li.posts__post
        = link_to  post_path(post.id) do
          - if post.type == 1
            【質問】
            = post.title
          - else
            = post.title
    
  %ul.tags
    タグ一覧
    - @tags.first(10).each do |tag|
      %li.tags__tag
        = render_with_hashtags("#"+tag.name)+"(#{tag.post_tags.count})"
  %footer
    %small.copyright
      @ 2020 shares.com